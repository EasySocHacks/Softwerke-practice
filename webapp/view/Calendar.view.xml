<mvc:View xmlns:calendar="sap.ui.unified.calendar"
		controllerName="itmo2021calendareny.controller.Calendar"
        xmlns:l="sap.ui.layout"
		xmlns:u="sap.ui.unified"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		class="viewPadding">
    <Table id="table">
        <columns>
            <Column>
                <Label text="Дата начала"/>
            </Column>
            <Column>
                <Label text="Дата окончания"/>
            </Column>
            <Column>
                <Label text="Количество дней (включая праздники)"/>
            </Column>
            <Column>
                <Label text="Количество рабочих дней"/>
            </Column>
            <Column/> 
        </columns>
    </Table>
    <Button 
        icon="sap-icon://add"
        press=".onAddVacation"
    />
    <u:CalendarLegend id="calendarLegend" columnWidth="200px"/>
	<u:Calendar
            id="calendar"
            intervalSelection="true"
            showWeekNumbers="false"
            months="12"
            width="100%"
            legend="calendarLegend">
    </u:Calendar>
</mvc:View>